<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.12.1/font/bootstrap-icons.min.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:ital,wght@0,100..700;1,100..700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <link rel="stylesheet" href="./css/style.css">
  <title>Rankings</title>
</head>
<body>
{{>nav}}

<section class="d-flex bg bg-black p-2 border border-dark mt-3 rounded sec">
  <div class="d-flex flex-column w-100">
    <b class="w-100 p-2 text-light text-center rounded h4 ranking">Estoy Fudiosoooo!! ðŸ˜¾</b>
    {{#each elos}}
      <div class="d-flex justify-content-between align-items-center text-light p-1">
        <div class="d-flex flex-column gap-2" style="width: 10%;">
          <span class="text-danger">#</span>
          <b class="text-warning">ðŸŸ¡ Elo</b>
        </div>
        <div class="d-flex flex-column gap-2" style="width: 30%;">
          <span class="text-secondary">Profile</span>
          <div class="d-flex align-items-center gap-2">
            <img src="{{this.avatar}}" class="image-ranking">
            <span>{{this.displayName}}</span>
          </div>
        </div>
        <div class="d-flex flex-column gap-2" style="width: 15%;">
          <span class="text-secondary">Elo</span>
          <b>{{this.elo}}</b>
        </div>
        <div class="d-flex flex-column gap-2" style="width: 15%;">
          <span class="text-secondary">Rank</span>
          <span>{{this.rank}}</span>
        </div>
        <div class="d-flex flex-column gap-2" style="width: 15%;">
          <span class="text-secondary">Match</span>
          <span>{{this.match}}</span>
        </div>
      </div>
    {{/each}}
    <hr class="border border-secondary"/>
    {{#each damage}}
      <div class="d-flex justify-content-between align-items-center text-light p-1">
        <div class="d-flex flex-column gap-2" style="width: 10%;">
          <span class="text-danger">#</span>
          <b class="text-warning">ðŸ’¥ Damage</b>
        </div>
        <div class="d-flex flex-column gap-2" style="width: 30%;">
          <span class="text-secondary">Profile</span>
          <div class="d-flex align-items-center gap-2">
            <img src="{{this.avatar}}" class="image-ranking">
            <span>{{this.displayName}}</span>
          </div>
        </div>
        <div class="d-flex flex-column gap-2" style="width: 15%;">
          <span class="text-secondary">Damage</span>
          <b>{{this.damage}}</b>
        </div>
        <div class="d-flex flex-column gap-2" style="width: 15%;">
          <span class="text-secondary">Rank</span>
          <span>{{this.rank}}</span>
        </div>
        <div class="d-flex flex-column gap-2" style="width: 15%;">
          <span class="text-secondary">Match</span>
          <span>{{this.match}}</span>
        </div>
      </div>
    {{/each}}
    <hr class="border border-secondary"/>
    {{#each kill}}
      <div class="d-flex justify-content-between align-items-center text-light p-1">
        <div class="d-flex flex-column gap-2" style="width: 10%;">
          <span class="text-danger">#</span>
          <b class="text-warning"><i class="fa-solid fa-skull text-secondary"></i> Kills</b>
        </div>
        <div class="d-flex flex-column gap-2" style="width: 30%;">
          <span class="text-secondary">Profile</span>
          <div class="d-flex align-items-center gap-2">
            <img src="{{this.avatar}}" class="image-ranking">
            <span>{{this.displayName}}</span>
          </div>
        </div>
        <div class="d-flex flex-column gap-2" style="width: 15%;">
          <span class="text-secondary">Kills</span>
          <b>{{this.kills}}</b>
        </div>
        <div class="d-flex flex-column gap-2" style="width: 15%;">
          <span class="text-secondary">Rank</span>
          <span>{{this.rank}}</span>
        </div>
        <div class="d-flex flex-column gap-2" style="width: 15%;">
          <span class="text-secondary">Match</span>
          <span>{{this.match}}</span>
        </div>
      </div>
    {{/each}}
    <hr class="border border-secondary"/>
    {{#each wins}}
      <div class="d-flex justify-content-between align-items-center text-light p-1">
        <div class="d-flex flex-column gap-2" style="width: 10%;">
          <span class="text-danger">#</span>
          <b class="text-warning"><i class="fa-solid fa-trophy text-danger"></i> Wins</b>
        </div>
        <div class="d-flex flex-column gap-2" style="width: 30%;">
          <span class="text-secondary">Profile</span>
          <div class="d-flex align-items-center gap-2">
            <img src="{{this.avatar}}" class="image-ranking">
            <span>{{this.displayName}}</span>
          </div>
        </div>
        <div class="d-flex flex-column gap-2" style="width: 15%;">
          <span class="text-secondary">Wins</span>
          <b>{{this.win}}</b>
        </div>
        <div class="d-flex flex-column gap-2" style="width: 15%;">
          <span class="text-secondary">Rank</span>
          <span>{{this.rank}}</span>
        </div>
        <div class="d-flex flex-column gap-2" style="width: 15%;">
          <span class="text-secondary">Match</span>
          <span>{{this.match}}</span>
        </div>
      </div>
    {{/each}}
  </div>
</section>

<h1 class="mt-3 text-center text-light rounded">--Ranking--</h1>

<section class="d-flex gap-2 justify-content-between mt-3 text-light bg bg-black border border-dark rounded p-2 sec sec2">
  <div class="border border-dark w-50 p-2 rounded">
    <b class="h5 d-flex justify-content-center bg-gradient bg-warning rounded text-black p-1">Elo Leaderboard</b>
    <div class="d-flex flex-column mt-3">
      {{#each eloss}}
        <div class="d-flex justify-content-between p-1">
          <div>
            <span class="text-warning">#{{increment @index}}</span>
            <span>{{this.displayName}}</span>
          </div>
          <b style="color: orange;">{{this.elo}}</b>
        </div>
      {{/each}}
    </div>
  </div>


  <div class="border border-dark w-50 p-2 rounded">
    <b class="h5 d-flex justify-content-center bg-gradient bg-secondary rounded p-1 text-light">Wins Leaderboard </b>
    <div class="d-flex flex-column mt-3">
      {{#each winss}}
        <div class="d-flex justify-content-between p-1">
          <div>
            <span class="text-warning">#{{increment @index}}</span>
            <span>{{this.displayName}}</span>
          </div>
          <span class="text-danger">{{this.win}}</span>
        </div>
      {{/each}}
    </div>
  </div>

  <div class="border border-dark w-50 p-2 rounded">
    <b class="h5 d-flex justify-content-center bg-gradient bg-danger rounded p-1 text-light">Damage Leaderboard </b>
    <div class="d-flex flex-column mt-3">
      {{#each damages}}
        <div class="d-flex justify-content-between p-1">
          <div>
            <span class="text-warning">#{{increment @index}}</span>
            <span>{{this.displayName}}</span>
          </div>
          <span class="text-danger">{{this.damage}}</span>
        </div>
      {{/each}}
    </div>
  </div>
</section>

<section class="d-flex gap-2 justify-content-between mt-3 text-light bg bg-black border border-dark rounded p-2 sec sec2">

  <div class="border border-dark w-50 p-2 rounded">
    <b class="h5 d-flex justify-content-center bg-gradient bg-info rounded p-1 text-black">Kills Leaderboard </b>
    <div class="d-flex flex-column mt-3">
      {{#each kills}}
        <div class="d-flex justify-content-between p-1">
          <div>
            <span class="text-warning">#{{increment @index}}</span>
            <span>{{this.displayName}}</span>
          </div>
          <span class="text-danger">{{this.kills}}</span>
        </div>
      {{/each}}
    </div>
  </div>

  <div class="border border-dark w-50 p-2 rounded">
    <b class="h5 d-flex justify-content-center bg-gradient bg-success rounded p-1 text-light">Matchs Leaderboard </b>
    <div class="d-flex flex-column mt-3">
      {{#each matchs}}
        <div class="d-flex justify-content-between p-1">
          <div>
            <span class="text-warning">#{{increment @index}}</span>
            <span>{{this.displayName}}</span>
          </div>
          <span class="text-danger">{{this.match}}</span>
        </div>
      {{/each}}
    </div>
  </div>

  <div class="border border-dark w-50 p-2 rounded">
    <b class="h5 d-flex justify-content-center bg-gradient bg-black border border-dark rounded p-1 text-light">Rank Leaderboard </b>
    <div class="d-flex flex-column mt-3">
      {{#each ranks}}
        <div class="d-flex justify-content-between p-1">
          <div>
            <span class="text-warning">#{{increment @index}}</span>
            <span>{{this.displayName}}</span>
          </div>
          <span class="text-danger">{{this.rank}}</span>
        </div>
      {{/each}}
    </div>
  </div>
</section>

<section class="d-flex gap-2 justify-content-between mt-3 text-light bg bg-black border border-dark rounded p-2 sec sec2">
  <div class="border border-dark w-50 mx-auto p-2 rounded">
    <b class="h5 d-flex justify-content-center bg-gradient bg-dark rounded p-1 text-light">Loser Leaderboard </b>
    <div class="d-flex flex-column mt-3">
      {{#each losers}}
        <div class="d-flex justify-content-between p-1">
          <div>
            <span class="text-warning">#{{increment @index}}</span>
            <span>{{this.displayName}}</span>
          </div>
          <span class="text-danger">{{this.loser}}</span>
        </div>
      {{/each}}
    </div>
  </div>
</section>

</body>
</html>
